@using CompetencyEvaluator.Web.Menus
@using Microsoft.AspNetCore.Mvc.Localization
@using CompetencyEvaluator.Localization
@inject IHtmlLocalizer<CompetencyEvaluatorResource> L
@inject IAuthorizationService Authorization
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Athletes"].Value;
    PageLayout.Content.MenuItemName = CompetencyEvaluatorMenus.Athletes;
}

