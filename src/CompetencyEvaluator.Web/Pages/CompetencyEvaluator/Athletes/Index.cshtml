@section content_toolbar {
    <abp-button id="ExportToExcelButton" text="@L["ExportToExcel"].Value" icon="download" size="Small" button-type="Primary" />
    @if (await Authorization.IsGrantedAsync(CompetencyEvaluatorPermissions.Athletes.Create))
    {
        <abp-button id="NewAthleteButton" text="@L["NewAthlete"].Value" icon="plus" size="Small" button-type="Primary" />
    }
